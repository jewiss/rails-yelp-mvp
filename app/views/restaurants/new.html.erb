<div class="container">
  <h1>Add a new restaurant !</h1>

  <%= simple_form_for @restaurant do |r| %>
    <%= r.input :name %>
    <%= r.input :address %>
    <%= r.input :category %>
    <%= r.input :phone_number %>
    <%= r.submit %>
  <% end %>
  <br>
  <%= link_to "⬅️", restaurants_path %>
</div>
